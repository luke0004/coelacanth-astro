---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultDescription = "Sailing voyages and refit notes from SV Coelacanth, a Hutting 40 exploring the North Sea and beyond.";
const defaultImage = "/og-image.jpg";
const metaDescription = description || defaultDescription;
const metaImage = image || defaultImage;
const fullImageURL = new URL(metaImage, Astro.site).toString();
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />

  <!-- SEO -->
  <meta name="description" content={metaDescription} />
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={metaDescription} />
  <meta property="og:image" content={fullImageURL} />
  <meta property="og:site_name" content="Coelacanth" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={metaDescription} />
  <meta name="twitter:image" content={fullImageURL} />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap" rel="stylesheet">

  <title>{title}</title>
  <ViewTransitions />
</head>
<body>

  <header>
    <h1>{title}</h1>
    <nav>
      <a href="/">The Ship</a> | 
      <a href="/logbook/">Logbook</a> | 
      <a href="https://www.youtube.com/@sy.coelacanth">YouTube</a> | 
      <a href="mailto:ahoy@coelacanth.ch">Contact</a>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <small></small>
      © {new Date().getFullYear()} Coelacanth | <a href="rss.xml">RSS-Feed</a>
    </small>
  </footer>

</body>
</html>
